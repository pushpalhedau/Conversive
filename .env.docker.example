# Docker Environment Variables Template
# Copy this file to .env.docker and update with your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=change_this_root_password_to_something_secure
MYSQL_DATABASE=stock_db
MYSQL_USER: user
MYSQL_PASSWORD: password

# Backend Configuration
DATABASE_URL=mysql+pymysql://user:password@db:3306/stock_db
FLASK_ENV=production
SECRET_KEY=change_this_to_a_random_secret_key

# Admin Credentials (for seeding)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_admin_password
