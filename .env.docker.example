# Docker Environment Variables Template
# Copy this file to .env.docker and update with your actual values

# PostgreSQL Database Configuration
POSTGRES_DB=stock_db
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=change_this_password_to_something_secure

# Backend Configuration
DATABASE_URL=postgresql://stock_user:change_this_password_to_something_secure@db:5432/stock_db
FLASK_ENV=production
SECRET_KEY=change_this_to_a_random_secret_key

# Admin Credentials (for seeding)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_admin_password

# pgAdmin Configuration
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=change_this_pgadmin_password
