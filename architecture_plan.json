{
    "project": "Stock Management System",
    "version": "1.0.0",
    "stack": {
        "backend": {
            "language": "Python 3.11+",
            "framework": "Flask",
            "database": "PostgreSQL (Neon DB)",
            "orm": "SQLAlchemy",
            "deployment": "Render (Docker)"
        },
        "frontend": {
            "framework": "React",
            "language": "TypeScript",
            "build_tool": "Vite",
            "state_management": "Redux Toolkit + RTK Query",
            "styling": "Tailwind CSS",
            "deployment": "Vercel / Docker (Nginx)"
        }
    },
    "database": {
        "schema": {
            "product": {
                "columns": [
                    {
                        "name": "id",
                        "type": "INT",
                        "constraints": "PK, Auto-increment"
                    },
                    {
                        "name": "name",
                        "type": "VARCHAR(255)",
                        "constraints": "Unique, Not Null"
                    },
                    {
                        "name": "description",
                        "type": "TEXT",
                        "constraints": "Nullable"
                    },
                    {
                        "name": "price",
                        "type": "DECIMAL(10, 2)",
                        "constraints": "Not Null"
                    },
                    {
                        "name": "total_quantity",
                        "type": "INT",
                        "constraints": "Not Null"
                    },
                    {
                        "name": "available_quantity",
                        "type": "INT",
                        "constraints": "Not Null"
                    },
                    {
                        "name": "need_restock",
                        "type": "BOOLEAN",
                        "constraints": "Default False"
                    },
                    {
                        "name": "image_url",
                        "type": "VARCHAR(255)",
                        "constraints": "Nullable"
                    }
                ]
            },
            "user": {
                "columns": [
                    {
                        "name": "id",
                        "type": "INT",
                        "constraints": "PK, Auto-increment"
                    },
                    {
                        "name": "username",
                        "type": "VARCHAR(80)",
                        "constraints": "Unique, Not Null"
                    },
                    {
                        "name": "password_hash",
                        "type": "VARCHAR(255)",
                        "constraints": "Not Null"
                    }
                ]
            }
        },
        "seed_data": [
            {
                "name": "Wireless Mouse",
                "description": "Ergonomic wireless mouse with 2.4GHz connection",
                "price": 29.99,
                "total_quantity": 100,
                "available_quantity": 85,
                "need_restock": false
            },
            {
                "name": "Mechanical Keyboard",
                "description": "RGB mechanical keyboard with Blue switches",
                "price": 89.99,
                "total_quantity": 50,
                "available_quantity": 5,
                "need_restock": true
            }
        ]
    },
    "api": {
        "base_url": "/api",
        "endpoints": [
            {
                "method": "POST",
                "path": "/products",
                "description": "Create a product"
            },
            {
                "method": "GET",
                "path": "/products",
                "description": "List all products"
            },
            {
                "method": "GET",
                "path": "/products/{id}",
                "description": "Get product details"
            },
            {
                "method": "PUT",
                "path": "/products/{id}",
                "description": "Update product"
            },
            {
                "method": "DELETE",
                "path": "/products/{id}",
                "description": "Delete product"
            },
            {
                "method": "GET",
                "path": "/restock/list",
                "description": "List items needing restock"
            },
            {
                "method": "PUT",
                "path": "/restock/update/{id}",
                "description": "Manual override restock"
            },
            {
                "method": "POST",
                "path": "/auth/login",
                "description": "Admin login"
            },
            {
                "method": "GET",
                "path": "/health",
                "description": "Health check"
            }
        ]
    },
    "tasks": [
        {
            "id": "A",
            "title": "Architecture & Repo Scaffolding",
            "priority": "HIGH",
            "complexity": "MEDIUM",
            "acceptance_criteria": "Repos created, folder structure set, READMEs added, .env.example created.",
            "outputs": [
                "backend/",
                "frontend/",
                "docker-compose.yml",
                "README.md"
            ]
        },
        {
            "id": "B",
            "title": "Backend Core APIs + Migrations",
            "priority": "HIGH",
            "complexity": "LARGE",
            "acceptance_criteria": "Flask app running, DB connected, Product model created, Migrations run, CRUD APIs working.",
            "outputs": [
                "backend/app/models/product.py",
                "backend/app/api/products.py",
                "backend/migrations/"
            ]
        },
        {
            "id": "C",
            "title": "Frontend Skeleton + RTK Query",
            "priority": "HIGH",
            "complexity": "LARGE",
            "acceptance_criteria": "React app running, RTK Query setup, Product list & Add Product forms working.",
            "outputs": [
                "frontend/src/features/products/",
                "frontend/src/services/api.ts"
            ]
        },
        {
            "id": "D",
            "title": "Docker + Local Dev",
            "priority": "MEDIUM",
            "complexity": "MEDIUM",
            "acceptance_criteria": "docker-compose up starts all services, hot-reload works.",
            "outputs": [
                "docker-compose.yml",
                "backend/Dockerfile",
                "frontend/Dockerfile"
            ]
        },
        {
            "id": "F",
            "title": "Deployment & Docs",
            "priority": "LOW",
            "complexity": "MEDIUM",
            "acceptance_criteria": "Backend on Render, Frontend on Vercel, Live URL working.",
            "outputs": [
                "Deployment"
            ]
        }
    ]
}